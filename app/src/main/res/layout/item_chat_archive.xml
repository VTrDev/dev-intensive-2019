<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="@dimen/item_size"
                android:padding="@dimen/spacing_normal_16"
                android:background="@color/color_bg_rv_item">

    <ru.skillbranch.devintensive.ui.custom.AvatarImageView
            android:id="@+id/iv_icon_archive"
            android:layout_width="@dimen/avatar_item_size"
            android:layout_height="@dimen/avatar_item_size"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_wr_icon"/>

    <TextView
            android:id="@+id/tv_title_archive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chat_archive_item_title"
            android:textColor="?attr/colorChatItemTitle"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_toRightOf="@id/iv_icon_archive"
            android:layout_toLeftOf="@+id/tv_date_group"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:maxLines="1"/>
    <TextView
            android:id="@+id/tv_message_author_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="John_Doe"
            android:textColor="?attr/colorChatItemTitle"
            android:textSize="14sp"
            android:layout_toRightOf="@id/iv_icon_archive"
            android:layout_marginRight="@dimen/spacing_tiny_4"
            android:layout_below="@id/tv_title_archive"/>
    <TextView
            android:id="@+id/tv_message_archive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Когда я проходил интенсив, я мало спал"
            android:textColor="?attr/colorChatItemText"
            android:textSize="14sp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/tv_message_author_archive"
            android:layout_toLeftOf="@+id/tv_counter_archive"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_below="@id/tv_title_archive"
            android:maxLines="1"/>
    <TextView
            android:id="@+id/tv_date_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="?attr/colorChatItemText"
            tools:text="18:00"/>
    <TextView
            android:id="@+id/tv_counter_archive"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/counter_size"
            android:layout_height="@dimen/counter_size"
            android:background="@drawable/bg_counter"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="?attr/colorChatItemMessageCount"
            tools:text="11"/>

</RelativeLayout>