<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" format="float"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="cv_borderColor" format="color" />
        <attr name="cv_borderWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AvatarImageView">
        <attr name="aiv_border_width" format="dimension" />
        <attr name="aiv_border_color" format="color" />
        <attr name="aiv_border_overlay" format="boolean" />
        <attr name="aiv_fill_color" format="color" />
        <attr name="aiv_circle_background_color" format="color" />
    </declare-styleable>
    
    <attr name="colorAccentedSurface" format="reference"/>
    <attr name="colorDivider" format="reference"/>
    <attr name="colorIcon" format="reference"/>

    <attr name="colorActionBarBackground" format="reference"/>
    <attr name="colorPrimaryBackground" format="reference"/>
    <attr name="colorChatItemBackground" format="reference"/>
    <attr name="colorChatItemSwipeBackground" format="reference"/>
    <attr name="colorChatIndicator" format="reference"/>
    <attr name="colorChatItemTitle" format="reference"/>
    <attr name="colorChatItemText" format="reference"/>
    <attr name="colorChatItemMessageCount" format="reference"/>
    <attr name="colorChatItemMessageCountBadge" format="reference"/>

</resources>